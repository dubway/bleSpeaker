#include <SPI.h>

const int slaveSelectPin = 12;

///////////////////////////////////
///////////////////////////////////
///////////////////////////////////

void setup() {
  SPI.begin(); 
  Serial.begin(9600);
  
  pinMode (slaveSelectPin, OUTPUT);  
}

///////////////////////////////////
///////////////////////////////////
///////////////////////////////////

void loop() {
  for(int i=0;i<255;i++){
    digitalWrite(slaveSelectPin,LOW);
    SPI.transfer(0);
    SPI.transfer(i);
    digitalWrite(slaveSelectPin,HIGH);
    delay(20);
  }
}

